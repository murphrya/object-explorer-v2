<div class="col-md-8 col-md-offset-2" id="setCredentials">
  <h3 class="text-primary"><%= image_tag("s3_logo.png", width: '35', height: '35', alt: 'S3 Login', class: "") %> Amazon S3 Object Storage <small>Account Settings</small></h3>
  <br>
  <table class="table table-striped table-condensed table-bordered table-hover">
  <tr>
    <th>Current S3 Address</th>
    <th>Current S3 Username</th>
    <th>Current S3 Password</th>
  </tr>
  <tr>
    <td><%= @currentS3address %></td>
    <td><%= @currentS3username %></td>
    <td><%= @currentS3password %></td>
  </tr>
  </table>
  <br>
  <!-- form to set S3 credentials -->
  <%= form_for :selection, :url => {:controller => "main", :action => "setS3"}, :remote => true  do |f| %>
  <div class="form-group">
    <%= f.label 'S3 Object Address (HTTPS):' %>
    <%= f.text_field(:s3address, class: 'form-control', :placeholder => "https://s3.amazonaws.com", required:true) %>
  </div>
  <div class="form-group">
    <%= f.label 'S3 Username:' %>
    <%= f.text_field(:s3username, class: 'form-control', :placeholder => "Access Key ID", required:true) %>
  </div>
  <div class="form-group">
    <%= f.label 'S3 Password:' %>
    <%= f.text_field(:s3password, class: 'form-control', :placeholder => "Secret Access Key", required:true) %>
  </div>
  <br>
  <%= f.submit 'Set S3 Credentials', :class => 'btn btn-primary' %>
  <% end %>
</div>
